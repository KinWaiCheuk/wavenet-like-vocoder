{
    "name": "PyTorch WaveNet",
    "arch": {
        "type": "WaveNet",
        "args": {
            "n_blocks": 2,
            "n_layers": 10,
            "radix": 2,
            "dilation_channels": 128,
            "residual_channels": 128,
            "skip_channels": 128,
            "descending": false
        }
    },
    "dataset": {
        "type": "AutoregressiveWAVDataset",
        "args": {
            "data_dir": "./data/train",
            "segment": 5000,
            "overlap": 2046
        }
    },
    "data_loader": {
        "batch_size": 10,
        "shuffle": true,
        "num_workers": 4,
        "prefetch_factor": 4,
        "pin_memory": true
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0
        }
    },
    "conditioner": {
        "type": "MelSpec",
        "args": {
            "sr": 22050,
            "n_fft": 1024,
            "hop_length": 256,
            "n_mels": 80
        }
    },
    "upsampler": {
        "type": "Upsample",
        "args": {
            "scale_factor": 256,
            "mode": "linear"
        }
    }
}