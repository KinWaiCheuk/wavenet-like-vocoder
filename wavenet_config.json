{
  "name": "wavenet-vocoder",
  "n_gpu": 2,
  "arch": {
    "type": "WaveNet",
    "args": {
      "n_blocks": 2,
      "n_layers": 10,
      "classes": 256,
      "radix": 2,
      "descending": false,
      "aux_channels": 80,
      "dilation_channels": 128,
      "residual_channels": 256,
      "skip_channels": 256
    }
  },
  "data_loader": {
    "type": "RandomWaveFileLoader",
    "args": {
      "data_dir": "data/",
      "batch_size": 4,
      "num_workers": 2,
      "hop_size": 128,
      "segment": 16384,
      "quantization_channels": 256,
      "injected_noise": false
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 1e-3
    }
  },
  "loss": "cross_entropy",
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 100000,
      "gamma": 0.5
    }
  },
  "trainer": {
    "steps": 1000000,
    "save_dir": "saved/",
    "save_freq": 500000,
    "verbosity": 2
  },
  "visualization": {
    "tensorboardX": true,
    "log_dir": "saved/runs"
  },
  "feature": {
    "type": "get_logmel",
    "args": {
      "sr": 22050,
      "n_fft": 1024,
      "hop_length": 128,
      "n_mels":80,
      "fmax": 8000
    }
  }
}
